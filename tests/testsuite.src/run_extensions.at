AT_SETUP([CALL BY CONTENT binary and literal])
AT_KEYWORDS([extensions literals])

AT_DATA([dump.c], [
#include <stdio.h>
#include <libcob.h>

COB_EXT_EXPORT int
dump (unsigned char *data, char *p)
{
  int i;
  if ( *p == 0 ) p++;
  if ( *p == 0 ) p++;	/* Skip for BIG Endian system */
  if ( *p == 0 ) p++;
  if ( *p == 1 ) {
     for (i = 0; i < 4; i++)
       printf ("%02x", data[[i]]);
  } else {
       printf ("%8.8d", *((int *)data));
  }
  puts ("");
  return 0;
}
])

